{
    "manifest_version": 3,
    "name": "Nalton Calculator",
    "version": "0.1.0",
    "description": "An actually good calculator extension",
    "permissions": [
        "declarativeContent",
        "storage",
        "tabs"
    ],
    "action": {
        "default_title": "Nalton calculator",
        "default_popup": "popup/index.html"
    },
    "icons": {
        "16": "common/images/icon16.png",
        "32": "common/images/icon32.png",
        "48": "common/images/icon48.png",
        "128": "common/images/icon128.png"
    }
}